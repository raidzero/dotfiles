[colors]
background = #d8000000
foreground = #ffffff
primary = #00ffff
alert = #bd2c40

[bar/top]
#monitor = ${env:MONITOR}
width = 100%
height = 15
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = ${colors.primary}

border-size = 0
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = DejaVu Sans:fontformat=truetype:size=8;2
font-1 = FontAwesome:pixelsize=10;2

; superscript - for ws index
font-2 = Abyssinica SIL:fontformat=truetype:size=6;-2
; subscript icons
font-3 = FontAwesome:pixelsize=10;2

font-4 = DejaVu Sans:fontformat=truetype:size=10;1

#modules-left = cpu memory filesystem volume date 
#modules-left = dateTime dateDate volume filesystem memory cpu 
#modules-center = ewmh
modules-right = cpu memory wlan battery volume backlight date
modules-center = xwindow
modules-left =  ewmh

tray-position = right
tray-padding = 3

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label>
format-underline = ${colors.primary}

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/xwindow]
type = internal/xwindow
format-underline = #00000000
format-foreground = ${colors.primary}
label = %title:0:75:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %percentage_used%%
label-unmounted =  not mounted
label-mounted-underline = ${colors.primary}

[module/ewmh]
type = internal/xworkspaces
enable-scroll = false

label-active = 
label-active-foreground = ${colors.foreground}
label-active-padding = 1

label-occupied = 
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1

label-urgent = 
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

label-empty = 
label-empy-foreground = ${colors.primary}
label-empty-padding = 1


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-underline = ${colors.primary}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-underline = ${colors.primary}
format = <label>
label = "%percentage_used%%"

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected = <label-connected>
format-connected-alt = <label-connected-alt>
format-connected-underline = ${colors.primary}
label-connected =  %essid:0:3:% %signal%%
label-connected-alt =  %essid% %signal%% %local_ip%

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.alert}
label-disconnected =  Disconnected

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %a, %b %d %Y"

time = " %l:%M %p "

format-underline = ${colors.primary}

label = %date% %time%

[module/volume]
type = internal/volume

label-volume = " %percentage%%"
label-volume-foreground = ${root.foreground}
label-volume-underline = ${colors.primary}
label-muted =  0%
label-muted-underline = ${colors.primary}

[module/battery]
poll-interval = 2
type = internal/battery
battery = BAT0
adapter = AC

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.primary}
label-charging =  %percentage%% %consumption%W ~%time%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.primary}
label-discharging =  %percentage%% %consumption%W %time%

format-full-prefix = " "
format-full-underline = ${colors.primary}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

time-format = %H:%M

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = " "
format-underline = ${colors.primary}
format-warn = <label-warn>
format-warn-underline = ${colors.alert}

label = "%temperature%"
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

[settings]
screenchange-reload = true
throttle-output = 5
throttle-output-for = 10

[module/gmusic]
type = custom/script
interval = 5
exec = python ~/.config/polybar/gmusic.py	
label = "%output:0:75:...%"
format-underline = ${colors.primary}

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = false

[module/2bws]
type              = custom/script
exec              = ~/.config/2bwm/2bws.sh
interval          = 0.01
format-padding    = 3
format-foreground = ${colors.background}
scroll-up         = exec ~/.config/2bwm/wscycle.sh -f
scroll-down       = exec ~/.config/2bwm/wscycle.sh -r
