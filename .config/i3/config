# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the restart shortcut. Do you really want to restart i3?' -b 'Yes, restart i3' 'i3-msg restart'"

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
		
		# vi mode
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bindsym $mod+Shift+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right

    bindsym h     move left
    bindsym j     move down
    bindsym k     move up
    bindsym l     move right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# power menu
set $sysmenu " [l]ock [p]oweroff [r]eboot [h]ibernate [s]leep "	
bindsym $mod+XF86PowerOff     mode $sysmenu
bindsym $mod+Scroll_Lock	  mode $sysmenu

mode $sysmenu {
	bindsym l		  exec ~/.config/i3/lockscreen; mode default
	bindsym p         exec sudo shutdown -P now
    bindsym r         exec sudo reboot
    bindsym s		  exec "sudo systemctl suspend"; mode default
    bindsym h		  exec "sudo systemctl hibernate"; mode default
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

set $randrmenu " xrandr: [jkl] [Enter|ESC] "
bindsym $mod+Shift+d			mode $randrmenu

mode $randrmenu {
	bindsym j		exec --no-startup-id echo "j" >> /tmp/randrmode
	bindsym k		exec --no-startup-id echo "k" >> /tmp/randrmode
	bindsym l		exec --no-startup-id echo "l" >> /tmp/randrmode

	bindsym Escape	mode default; exec --no-startup-id rm /tmp/randrmode
	bindsym Return	mode default; exec --no-startup-id ~/dotfiles/bin/xrandr.sh
}


bindsym $mod+period			gaps inner all plus 5
bindsym $mod+Shift+period	gaps inner all set 10
bindsym $mod+Shift+comma	gaps inner all set 0

